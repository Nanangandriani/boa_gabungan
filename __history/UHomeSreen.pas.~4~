    { Public declarations }
  end;

var
  FHomeSreen: TFHomeSreen;

implementation

{$R *.dfm}

uses UMainMenu, UHomeLogin;

procedure TFHomeSreen.Timer1Timer(Sender: TObject);
var
  Progress: Integer;
begin
  if ProgressBar1.Position=100 then
  begin
    Timer1.Enabled:=false;
   // FHomeLogin.show;
    Self.Hide;
  end
  else
  begin
    ProgressBar1.Position:=ProgressBar1.Position+15;
  end;
end;

end.
