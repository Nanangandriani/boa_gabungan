  TFHomeSreen = class(TForm)
    ProgressBar1: TProgressBar;
    Timer1: TTimer;
    Label1: TRzLabel;
    Image1: TImage;
    procedure Timer1Timer(Sender: TObject);
  private
    { Private declarations }
