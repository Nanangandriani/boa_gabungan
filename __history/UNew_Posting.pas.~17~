unit UNew_Posting;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, RzButton, Vcl.ExtCtrls, Vcl.StdCtrls;

type
  TFNewPosting = class(TForm)
    Pnlposting: TPanel;
    Label17: TLabel;
    Label16: TLabel;
    ednama_posting: TEdit;
    Pnlcost: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Edby: TEdit;
    PnlPosnr: TPanel;
    Label3: TLabel;
    Label4: TLabel;
    Edpost: TEdit;
    Panel2: TPanel;
    BBatal: TRzBitBtn;
    BSave: TRzBitBtn;
    procedure BBatalClick(Sender: TObject);
    procedure BSaveClick(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    jenis:string;
  end;

function FNewPosting: TFNewPosting;

implementation

{$R *.dfm}

uses UNewDaftar_perkiraan, UDataModule;
var
//  FPakai_BahanPersbu: TFPakai_BahanPersbu;
  RealFNewPosting: TFNewPosting;

function FNewPosting: TFNewPosting;
begin
  if RealFNewPosting <> nil then
    FNewPosting:= RealFNewPosting
  else
    Application.CreateForm(TFNewPosting, Result);
end;

procedure TFNewPosting.BBatalClick(Sender: TObject);
begin
  Close;
end;

procedure TFNewPosting.BSaveClick(Sender: TObject);
begin
  if jenis='Posting' then
  begin
    if ednama_posting.Text='' then
    begin
      MessageDlg('Nama Posting Wajib Diisi..!!',mtInformation,[mbRetry],0);
    end
    else
    begin
      with dm.Qtemp do
      begin
        close;
        sql.Clear;
        sql.Text:='Insert Into t_ak_posting_type("posting") '+
                  'Values (:parnama_modul)';
        parambyname('parnama_modul').Value:=ednama_posting.Text;
        execsql;
      end;
      MessageDlg('Simpan Berhasil..!!',mtInformation,[MBOK],0);
      FNewdaftar_perkiraan_bank.CBposting.Clear;
      with dm.Qtemp do
      begin
        Close;
        Sql.Clear;
        Sql.Text:='select "posting" from t_ak_posting_type';
        Open;
      end;
      while not DM.Qtemp.Eof do
      begin
        FNewdaftar_perkiraan_bank.CBposting.Items.Add(DM.Qtemp.FieldByName('posting').AsString);
        DM.Qtemp.Next;
      end;
    end;
  end;
  if jenis='by' then
  begin
    if edby.Text='' then
  begin
    MessageDlg('Group by Wajib Diisi..!!',mtInformation,[mbRetry],0);
  end
  else
  begin
    with dm.Qtemp do
    begin
      close;
      sql.Clear;
      sql.Text:='Insert Into t_ak_type_cost("cost_type") '+
                'Values (:parnama_modul)';
      parambyname('parnama_modul').Value:=Edby.Text;
      execsql;
    end;
    MessageDlg('Simpan Berhasil..!!',mtInformation,[MBOK],0);
  end;
  end;
  if jenis='postnr' then
  begin
    if Edpost.Text='' then
  begin
    MessageDlg('Group Post Neraca Wajib Diisi..!!',mtInformation,[mbRetry],0);
  end
  else
  begin
    with dm.Qtemp do
    begin
      close;
      sql.Clear;
      sql.Text:='Insert Into t_ak_type_balance_post(post_name) '+
                'Values(:post)';
      parambyname('post').Value:=Edpost.Text;
      execsql;
    end;
    MessageDlg('Simpan Berhasil..!!',mtInformation,[MBOK],0);
  end;
  end;
  Close;
end;

procedure TFNewPosting.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action:=cafree;
end;

procedure TFNewPosting.FormCreate(Sender: TObject);
begin
  RealFNewPosting:=Self;
end;

procedure TFNewPosting.FormDestroy(Sender: TObject);
begin
  RealFNewPosting:=nil;
end;

end.
