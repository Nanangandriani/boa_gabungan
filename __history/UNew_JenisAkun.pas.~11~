unit UNew_JenisAkun;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, RzBtnEdt, Vcl.Mask,
  RzEdit, RzButton, Vcl.ExtCtrls;

type
  TFNew_JenisAkun = class(TForm)
    Panel1: TPanel;
    BBatal: TRzBitBtn;
    BSimpan: TRzBitBtn;
    EdJenis: TEdit;
    Label2: TLabel;
    Label4: TLabel;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
    procedure BSimpanClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

Function FNew_JenisAkun: TFNew_JenisAkun;

implementation

{$R *.dfm}

uses UDataModule, UNewDaftar_perkiraan;

var
//  FPakai_BahanPersbu: TFPakai_BahanPersbu;
  RealFNew_JenisAkun: TFNew_JenisAkun;

function FNew_JenisAkun: TFNew_JenisAkun;
begin
  if RealFNew_JenisAkun <> nil then
    FNew_JenisAkun:= RealFNew_JenisAkun
  else
    Application.CreateForm(TFNew_JenisAkun, Result);
end;


procedure TFNew_JenisAkun.BSimpanClick(Sender: TObject);
begin
  if EdJenis.Text='' then
  begin
    MessageDlg('Jenis Wajib Diisi..!!',mtInformation,[mbRetry],0);
  end
  else
  begin
    with dm.Qtemp do
    begin
      close;
      sql.Clear;
      sql.Text:='Insert Into t_ak_type("type") '+
                'Values (:type)';
      parambyname('type').Value:=EdJenis.Text;
      execsql;
    end;
    MessageDlg('Simpan Berhasil..!!',mtInformation,[MBOK],0);
    FNewdaftar_perkiraan_bank.CBposting.Clear;
    with dm.Qtemp do
    begin
      Close;
      Sql.Clear;
      Sql.Text:='select "type" from t_ak_type';
      Open;
    end;
    while not DM.Qtemp.Eof do
    begin
      FNewdaftar_perkiraan_bank.cbjenis_akun.Items.Add(DM.Qtemp.FieldByName('type').AsString);
      DM.Qtemp.Next;
    end;
    Close;
  end
end;

procedure TFNew_JenisAkun.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action:=cafree;
end;

procedure TFNew_JenisAkun.FormCreate(Sender: TObject);
begin
  RealFNew_JenisAkun:=Self;
end;

procedure TFNew_JenisAkun.FormDestroy(Sender: TObject);
begin
  RealFNew_JenisAkun:=nil;
end;

end.
